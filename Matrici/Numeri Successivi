#include <stdio.h>

#define DIM 5 
int main() {

  int n=0,x=0;
  int m[DIM][DIM];
  
  for(int i=0; i<DIM; i++){
    printf("inserisci i valori della prima riga \n"); 
    scanf("%d", &m[x][i]);
    }

  for(int i=1; i<DIM; i++){
    for (int j=0; j<DIM; j++){
    m[i][j]=m[x][j]+1;
  }
    x++;
}

for(int i=0; i<DIM; i++){
    for (int j=0; j<DIM; j++){
       printf("%d \t", m[i][j]);
  }
  printf("\n"); 
}
}
