#include <stdio.h>

#define DIM 10 
#define TAPPO -1

void carica_vettore(int* v){
  
  int i;
    i=0;
  
  do{
  printf("inserire elemento in posizione %d (-1 per  terminare): ", i);
    scanf("%d",&v[i]);
    i++;
    }while(v[i-1] != -1 && i<DIM-1);
  
  if (i==DIM-1)
    v[i]=-1;
 
}

int conta_maggiori(int v[],int x){
  int conta; 

  conta=0;
  for(int i=0; v[i]!=TAPPO; i++)
    if(v[i]>x)
      conta++;

  return conta;

}
void visualizza_vettore(int* v){
for(int i=0; v[i]!=TAPPO; i++)
printf("\t %d ",v[i]);

printf("\n");

}

