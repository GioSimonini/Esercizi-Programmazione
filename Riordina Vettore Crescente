int main() {
    int x,j;

  printf("Quanti numeri vuoi inserire? ");
  scanf("%d",&x);
  int v[x];
  
     for (int i=0; i<x ; i++){
      printf("Inserisci un numero: ");
      scanf("%d", &v[i]);
      }

  for (int i=0; i<x; i++){

    if (v[i]<v[i+1])
      j=v[i];
      v[i]=v[i+1];
      v[i+1]=j;
    
  }

  for (int i=0; i<x ; i++){
      printf("\t %d", v[i]);
    
      }

}

