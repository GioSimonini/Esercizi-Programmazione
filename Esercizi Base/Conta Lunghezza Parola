#include <stdio.h>
#define DIM 20
int main() {
  char s[DIM];
    int i,cont; 

  printf("inserire parola: ");
  scanf("%s",s);

   cont=0; 
  
  while (s[cont]!='\0')
        cont++;

  printf("lunghezza registrata: %d", cont);
    
}

