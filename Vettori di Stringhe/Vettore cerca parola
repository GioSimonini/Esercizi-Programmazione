#include <stdio.h>
#include <string.h>
#define R 5
#define C 10

void carica(char (*m)[C]) {

  for (int i = 0; i < R; i++) {
    printf("Inserisci la stringa a indice %d :", i);
    scanf("%s", *(m + i));
  }
}

void visualizza(char (*m)[C]) {
  for (int i = 0; i < R; i++)
    if (*(*(m + i) + 0) != '\0')
      printf("%d %s\n", i, *(m + i));
}

void ricerca(char (*m)[C], int *prima, int *ultima, char *cerca) {
  *prima = -1;
  *ultima = -1;
  int r = 0;
  for (int i = 0; i < R; i++) {
    if (*(*(m + i) + 0) != '\0') {
      if (strcmp(*(m + i), cerca) == 0) {
        if (*(prima) == -1)
          *(prima) = i;
        else
          *(ultima) = i;
      }
    }
  }
}

int main() {
  char m[R][C];
  char c[C];
  int prima, ultima, r = 0;
  carica(m);
  visualizza(m);
  printf("Inserisci la parola da cercare:");
  scanf("%s", c);
  ricerca(m, &prima, &ultima, c);

  if (prima == -1 && ultima == -1)
    printf("assente\n");
  else
    printf("prima occorrenza: %d\tultima occorrenza: %d\n", prima, ultima);

  return 0;
}
